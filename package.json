{
  "name": "@zswang/react-petchain",
  "version": "0.0.1",
  "description": "Pet chain for React",
  "keywords": ["react", "react-component", "react-petchain", "pet", "chain"],
  "homepage": "http://github.com/zswang/react-petchain/",
  "author": {
    "name": "zswang",
    "url": "http://weibo.com/zswang"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zswang/react-petchain.git"
  },
  "bugs": {
    "url": "http://github.com/zswang/react-petchain/issues"
  },
  "files": ["assets/*.css", "lib", "es", "dist"],
  "license": "MIT",
  "main": "./lib/Pet",
  "typings": "./lib/Pet.d.ts",
  "module": "./es/Pet",
  "style": "./assets/index.css",
  "config": {
    "port": 8005,
    "entry": {
      "react-petchain": ["./src/Pet.tsx"]
    }
  },
  "scripts": {
    "build": "rc-tools run build",
    "dist": "rc-tools run dist",
    "gh-pages": "rc-tools run gh-pages",
    "start": "rc-tools run server",
    "compile": "rc-tools run compile --babel-runtime",
    "pub": "rc-tools run pub --babel-runtime",
    "lint": "rc-tools run lint",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "setupFiles": ["./tests/setup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "transform": {
      "\\.tsx?$": "./node_modules/rc-tools/scripts/jestPreprocessor.js",
      "\\.jsx?$": "./node_modules/rc-tools/scripts/jestPreprocessor.js"
    }
  },
  "devDependencies": {
    "@types/react": "^16.0.38",
    "coveralls": "^2.11.15",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.0.0",
    "jest": "^20.0.0",
    "pre-commit": "1.x",
    "rc-tools": "7.x",
    "rc-trigger": "^2.2.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0"
  },
  "pre-commit": ["lint"],
  "dependencies": {
    "babel-runtime": "6.x"
  }
}
